package pl.restaurant.rest;

import javax.ejb.EJB;
import javax.ws.rs.Consumes;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.PUT;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;

import pl.restaurant.Client;
import pl.restaurant.ClientManager;
import pl.restaurant.ejb.ClientEjb;


@Path("/clients")
@Consumes({ "application/json" })
@Produces({ "application/json" })
public class ClientRest implements ClientManager {

	@EJB
	ClientEjb bean;
	
	@Override
	@POST
	public void create(Client client) {
		bean.create(client);
	}

	@Override
	@GET
	@Path("/{idc}")
	public Client findById(@PathParam("idc") int idc) {
		Client client = bean.find(idc);
		return client;
	}

	@Override
	@PUT
	public void updateClient(Client client) {
		try {
			bean.update(client);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	@Override
	public void delete(int idc) {
		// TODO Auto-generated method stub

	}

}
